<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/liner_main"
            android:orientation="vertical">
        </LinearLayout>
    </ScrollView>

    <Button
        android:onClick="onClick"
        android:text="@string/new_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="@dimen/marginLeft_button_new"
        android:layout_marginBottom="@dimen/marginBottom_button_new"
        android:id="@+id/button_new" />

    <Button
        android:onClick="onClick"
        android:text="@string/top_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button_new"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="@dimen/marginRight_button_top"
        android:layout_marginEnd="@dimen/marginEnd_button_top"
        android:id="@+id/button_top" />

</RelativeLayout>